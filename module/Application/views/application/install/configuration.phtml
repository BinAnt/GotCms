?>
<h2><?php echo $this->escapeHtml($this->translate('Configuration')); ?></h2>

<?php $elements = $this->form->getElements(); ?>
<?php foreach ($elements as $element): ?>
    <div>
        <label class="required" for="name"><?php echo $this->escapeHtml($this->translate($element->getAttribute('label'))); ?></label>

        <?php echo $this->formElement($element); ?>
        <?php echo $this->formElementErrors($element); ?>
    </div>
<?php endforeach; ?>

<?php foreach($this->form->get('template')->getAttribute('data') as $designName => $data): ?>
    <div class="template-list">
        <div class="hide" id="tpl-<?php echo $this->escapeHtml($designName); ?>">
            <?php echo $data; ?>
        </div>
    </div>
<?php endforeach; ?>

<script type="text/javascript">
    $('#template').on('change', function() {
        $('.template-list > div').hide();
        $('#tpl-' + $(this).val()).show();
    });
</script>
