<?php $files = $this->tools('unserialize', $this->files); ?>
<?php if (!empty($files)): ?>
    <div class="pull-right col-lg-10 form-group">
    <?php if (!$this->isMultiple): ?>
        <?php $files = array($files); ?>
    <?php endif; ?>

    <?php foreach ($files as $file): ?>
        <a target="_blank" href="<?php echo $this->escapeHtml($file['value']); ?>"><?php echo $this->escapeHtml($file['value']); ?></a><br>
    <?php endforeach; ?>
    </div>
<?php endif; ?>
